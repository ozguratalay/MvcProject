@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<table class="table table-hover">
    <tr>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a href="/AdminCategory/EditCategory/@item.Id" class="btn btn-warning">Güncelle</a>
                <a href="#" class="btn btn-info">Detaylar</a>
                <a href="/AdminCategory/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Category/AddCategory">Yeni Kategori</a>

