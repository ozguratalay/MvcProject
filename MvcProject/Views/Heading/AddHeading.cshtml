@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Başlık Ekleme</h1>
<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryId,(List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryId)
        <br />
        @Html.Label("Yazar")
        @Html.DropDownList("writerId",null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterId)
      
        <button class="btn btn-info">
            Başlık Ekle
        </button>
    </div>
}

